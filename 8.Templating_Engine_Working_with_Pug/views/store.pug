doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Store
        link( href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous")
        link( rel="stylesheet" href="../css/main.css")
    body 
        nav.navbar.navbar-expand-lg.bg-body-tertiary.border-bottom
            .container-fluid
                .collapse.navbar-collapse
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link.text-dark.fs-4.px-3.selected(href="/") Store 
                        li.nav-item
                            a.nav-link.text-dark.fs-4.px-3(href="/new_product") New Product 


        .card-container.pt-3
            if products.length > 0
                each product in products
                    .card.m-3.custom-card
                        img.card-img-top.card_image(src="../assets/"+product.img, alt=product.title)
                        .card-body
                            h3.card-title.m-1 #{product.title}
                            button.btn.btn-warning.w-100.mt-3 Add to Cart
            else 
                .m-5.p-5 
                    h1 No Product Available 
                    a.btn.btn-outline-dark.fs-4.my-3(href='/new_product') Add Product