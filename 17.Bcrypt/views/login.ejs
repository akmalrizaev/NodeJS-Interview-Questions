<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="../css/add-product.css" />
	<title>Login</title>
</head>

<body>
	<%-  include("./includes/navbar.ejs"), {isLoggedIn:isLoggedIn} %>


	<div class="container-fluid mt-4 form-container">
		<form class="w-25" action="/login" method="post">
			<h2 class="fw-bold fs-3 m-4 mb-2">Login</h2>
			<div class="form-control m-3 p-4">
				<div class="row">

					<div class="col-12 mt-2 mb-3">
						<label class="form-label fs-4">Username <span
								class="fs-6 text-secondary fst-italic">(Email)</span></label>
						<input type="text" name="userName" class="form-control" placeholder="name@example.com" />
					</div>
				</div>

				<div class="row">
					<label class="form-label fs-4">Password</label>
					<div class="col-10 mt-2 mb-3">
						<input type="password" name="password" class="form-control" placeholder="Password"
							id="passwordInp" />
					</div>
					<div class="mt-2 mb-3 col-2 btn">
						<i class="bi bi-eye-slash" name="passwordHidden" onclick="toggleDisplay(this)"></i>
					</div>
				</div>

			</div>

			<button class="btn btn-primary fs-4 m-3 w-100" type="submit">Login</button>

		</form>
	</div>

	<script>
		let passwordInp = document.getElementById("passwordInp");
		let confirmPasswordInp = document.getElementById("confirmPasswordInp");

		const toggleDisplay = (e) => {
			let selectedToggle = e.getAttribute("name");

			switch (selectedToggle) {
				case "passwordHidden":
					passwordInp.type = "text";
					e.className = "bi bi-eye";
					e.setAttribute("name", "passwordVisible");

					break;

				case "passwordVisible":
					passwordInp.type = "password";
					e.className = "bi bi-eye-slash";
					e.setAttribute("name", "passwordHidden");

					break;



				default:

					break;
			}

		}
	</script>
</body>

</html>